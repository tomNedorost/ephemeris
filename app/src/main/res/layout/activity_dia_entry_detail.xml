<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diaEntryDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <!--ToDO: change text to string res-->

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/dia_entry_detail_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/title_activity_detail" />

    <!--Image / ToDO: Beschränkt auf 1 oder mehrere Bilder möglich?-->
    <ImageView
        android:id="@+id/imageView_entryImage"
        android:layout_width="384dp"
        android:layout_height="158dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/dia_entry_detail_entryImageDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dia_entry_detail_toolbar"
        app:srcCompat="@drawable/stock_beach" />

    <!--Tags inside a LinearLayout wrapped in HorizontalScrollView -->

    <!-- Placeholder image for mood -->

    <!--Time-->
    <TextView
        android:id="@+id/textView_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="10:52"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_entryImage"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Location-->
    <TextView
        android:id="@+id/textView_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Regensburg"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_entryImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--Entry-->
    <TextView
        android:id="@+id/textView_entryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TestTestTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_entryImage"
        android:textSize="18sp"/>




</android.support.constraint.ConstraintLayout>
