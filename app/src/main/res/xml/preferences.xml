<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Turn Reminder Notifications on/off -->
    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="reminder_notification"
        android:summary="@string/pref_reminder_notifications_summary"
        android:title="@string/pref_reminder_notifications" />

    <!-- ToDo: Add Reminder Ringtone Preference-->

    <!-- Only active if Reminder is turned on. Turn Vibrate on/off -->
    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:dependency="reminder_notification"
        android:key="reminder_notification_vibrate"
        android:title="@string/pref_reminder_notifications_vibrate" />

    <!-- Only ative if Reminder is turned on. Set Reminder Time. -->
    <rgbg.ss18.android.ephemeris.TimePickerPreference.TimePreference
        android:defaultValue="12:00"
        android:dependency="reminder_notification"
        android:key="reminder_notification_time"
        android:title="@string/pref_reminder_notifications_time"
        />

</android.support.v7.preference.PreferenceScreen>